<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Demo" parent="Base.Theme.Demo">
        <item name="isLightTheme">true</item>
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryVariant">@color/navy</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/navy</item>
        <item name="colorSecondaryVariant">@color/navy</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/navy</item>
        <item name="android:colorBackground">@color/light_grey</item>
        <item name="colorOnBackground">@color/navy</item>
    </style>

    <attr format="reference" name="ataulmTextViewStyle"/>

    <style name="Base.Theme.Demo" parent="Platform.Theme.Demo">
        <item name="android:textViewStyle">@style/Widget.Demo.TextView</item>
        <item name="materialButtonStyle">@style/Widget.Demo.Button</item>
        <item name="switchStyle">@style/Widget.Demo.Switch</item>
        <item name="toolbarStyle">@style/Widget.Demo.Toolbar</item>
        <item name="ataulmTextViewStyle">@style/Widget.Demo.AtaulmTextView</item>
    </style>

    <style name="Widget.Demo.AtaulmTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?colorOnBackground</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Demo.AtaulmTextView</item>
    </style>

    <style name="ThemeOverlay.Demo.AtaulmTextView" parent="">
        <item name="colorOnBackground">@color/red</item>
    </style>

    <style name="Widget.Demo.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Demo.Button</item>
    </style>

    <style name="ThemeOverlay.Demo.Button" parent="">
        <item name="colorPrimary">?colorSecondary</item>
    </style>

    <style name="Widget.Demo.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.Demo.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.Demo.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:elevation">4dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Demo.Toolbar</item>
        <item name="titleTextColor">?colorOnBackground</item>
    </style>

    <style name="ThemeOverlay.Demo.Toolbar" parent="">
        <item name="iconTint">?colorOnBackground</item>
    </style>

    <style name="Platform.Theme.Demo" parent="Platform.V21.Theme.Demo" />

    <style name="Platform.V21.Theme.Demo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

</resources>
